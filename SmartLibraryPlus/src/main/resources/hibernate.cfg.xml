<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- SQLite Config -->
        <property name="connection.driver_class">org.sqlite.JDBC</property>
        <property name="connection.url">jdbc:sqlite:smartlibrary.db</property>
        <!-- Use the community dialect for SQLite -->
        <property name="dialect">org.hibernate.community.dialect.SQLiteDialect</property>

        <!-- Echo all executed SQL to stdout -->
        <property name="show_sql">true</property>
        <!-- Format SQL nicely -->
        <property name="format_sql">true</property>

        <!-- Update the database schema on startup to match entities -->
        <property name="hbm2ddl.auto">update</property>
        
        <!-- Mapping classes will be added here via code or explicitly -->
        <mapping class="src.entity.Book"/>
        <mapping class="src.entity.Student"/>
        <mapping class="src.entity.Loan"/>
    </session-factory>
</hibernate-configuration>
